# EditorConfig is awesome: https://editorconfig.org

# Top-level configuration file
root = true

# Default: spaces, 2-space indentation
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Swift
[*.swift]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
